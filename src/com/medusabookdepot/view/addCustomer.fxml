<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@materialDesign.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
	<content>
		<VBox styleClass="card">
			<children>
				<HBox VBox.vgrow="ALWAYS">
					<children>
						<VBox prefWidth="300.0">
							<children> 
					        	<Label styleClass="card-title" text="Add Customer" />
					        	<Label styleClass="control-label" text="Name" />
				                <TextField prefHeight="43.0" prefWidth="300.0" fx:id="nameField"/>
				                <Label styleClass="control-label" text="Address"/>
				                <TextField prefHeight="42.0" prefWidth="300.0" fx:id="addressField"/>
					            <Label styleClass="control-label" text="Phone Number" />
								<TextField prefHeight="42.0" prefWidth="300.0" fx:id="phoneField"/>
								<Label styleClass="control-label" text="Customer Type" />
				                <ChoiceBox value="Individual" prefWidth="300.0" fx:id="typeChoiceBox">
        							<String fx:value="Library"/>
        							<String fx:value="Individual"/>
    							</ChoiceBox>
                           		<Pane prefHeight="20.0" />
                           		<HBox>
	                           		<children>
	                           			<Pane prefWidth="200.0" HBox.hgrow="ALWAYS" />
								        <Button defaultButton="true" mnemonicParsing="false" text="ADD" HBox.hgrow="ALWAYS" />
									</children> 
						   		</HBox>
							</children>
		                    <padding>
		                        <Insets right="20.0" />
		                    </padding> 
						</VBox>
						<VBox HBox.hgrow="ALWAYS">
							<children>
								<TableView editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
									<columns>
			                          	<TableColumn text="Name" />
			                            <TableColumn text="Address" />
			                            <TableColumn text="Phone Number" />
								    </columns>
							        <columnResizePolicy>
							        	<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							        </columnResizePolicy>
								</TableView>
							</children>
						</VBox>
					</children>
				</HBox>  
	        </children>	
		</VBox>					
	</content>
	<padding>
		<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
	</padding>
</ScrollPane>
