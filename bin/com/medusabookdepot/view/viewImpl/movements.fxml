<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@materialDesign.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medusabookdepot.view.viewImpl.ScreenControl">
	<content>
		<VBox styleClass="card">
			<children>
	        	<HBox>
	            	<children>
                   		<Label styleClass="card-title" text="Movements" />
                   		<Pane prefWidth="200.0" HBox.hgrow="ALWAYS" />
                   		<Button fx:id="addMovement" mnemonicParsing="false" styleClass="button-flat" text="ADD NEW" onAction="#switchScreen" />
                   		<Button mnemonicParsing="false" styleClass="button-flat" text="EDIT" />                           
                        <Button mnemonicParsing="false" styleClass="button-flat" text="DELETE" />
                    </children>
                </HBox>
	            <HBox VBox.vgrow="ALWAYS">
	               <children>
	                  <VBox HBox.hgrow="ALWAYS">
	                     <children>
	                        <TableView editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
	                          <columns>
	                          	<TableColumn text="Quantity" />
	                            <TableColumn text="Title" />
	                            <TableColumn text="ISBN" />
	                            <TableColumn text="Sender" />
	                          	<TableColumn text="Receiver" />
	           					<TableColumn text="Date" />
	           					<TableColumn text="Tracking#" />
	                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
	                        </TableView>
	                     </children>
	                  </VBox>
	               </children>
	            </HBox>
	        </children>	
		</VBox>					
	</content>
	<padding>
		<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
	</padding>
</ScrollPane>
